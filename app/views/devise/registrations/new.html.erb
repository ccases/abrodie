<div class="main-container-signup">

  <div class="hero">
      <p id="slogan">Ready ka na mag Abroad? </p>
  </div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="title">
    <p>Sign Up</p>
  </div>
  <div class="email-signup">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="password-signup">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="password-confirm">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  
  <div class="subform">
  
    <% if @applicant %>
      <%=render "devise/registrations/applicant/form", form: f%>
    <% elsif @agency %>
      <%=render "devise/registrations/agency/form", form: f%>
    <% elsif @admin %>
      <%=render "devise/registrations/admin/form", form: f%>
    <% end %>

    <div class="field">
      <%= f.label :avatar %> <br />
        <label class="login-btn">
          Upload new image
          <%= f.file_field :avatar, :class => 'avatar-signup'%> <br />
        </label>
    </div>
  </div> 

  <div class="actions">
    <%= f.submit "Sign up", :class => 'login-btn'  %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>


</div>
