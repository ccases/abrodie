= link_to "Back to agency", user_path(@agency)
= form_with model: [@agency, @review] do |f|
  - if @review.errors.any?
    #errorExplanation
      %h2
        = pluralize(@review.errors.count, "error")
        prohibited
        this post from being saved:
      %ul
        - @review.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :rating
    %br/
    
    = f.label :rating, "1", value: 1
    = f.radio_button :rating, 1
    = f.label :rating, "2", value: 2
    = f.radio_button :rating, 2
    = f.label :rating, "3", value: 3
    = f.radio_button :rating, 3
    = f.label :rating, "4", value: 4
    = f.radio_button :rating, 4
    = f.label :rating, "5", value: 5
    = f.radio_button :rating, 5
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .actions
    = f.submit