%h1 Listing jobs

%table
  %thead
    %tr
      %th Job title
      %th Description
      %th Location
      %th
      %th
      %th

  %tbody
    - @jobs.each do |job|
      %tr
        %td= job.title
        %td= job.desc.truncate(40)
        %td= job.location
        %td= link_to 'Show', job_path(job.id)
        %td= link_to 'Edit', edit_job_path(job.id)
        %td= link_to 'Destroy', job, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Job', new_job_path
