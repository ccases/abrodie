.agency-container
  .container-wide
    -if agency.user.avatar.attached?
      =image_tag agency.user.avatar.variant(:msg)
    -else
      =image_tag "no_avatar.png", size: "50"
    .name-container
      %p.name=agency.name
      %p.ago="Last updated: #{time_ago_in_words(agency.updated_at)} ago"
  
  .status
    -if agency.verified?
      .verified
        VERIFIED
    -else
      .pending
        PENDING

  .kind
    =agency.kind
  
  .joined
    =agency.created_at.to_date
  
  .view
    =link_to "View", user_path(agency.user)

  %i.material-icons more_vert